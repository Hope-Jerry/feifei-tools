    click-border-color:color,
    click-text-color:color,
}

struct Theme {

    //主题名称
    theme-name:string,

    //logo颜色
    logo-color:color,

    //bar背景颜色
    bar-background-color:color,
    //bar文字颜色
    bar-text-color:color,
