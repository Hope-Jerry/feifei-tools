    bar-shadow-color:color,
    //窗体内容部分背景颜色
    content-background-color:color,
    //窗体内容文字颜色
    content-text-color:color,
    //窗体边框颜色
    content-border-color:color,
    //鼠标悬浮背景颜色
    hover-content-background-color:color,


    //主要按钮
    primary-button:ButtonTheme,
    //次要按钮
    second-button:ButtonTheme,
    //危险按钮
    danger-button:ButtonTheme,
    //灰色按钮
    grey-button:ButtonTheme,
    
    

}

